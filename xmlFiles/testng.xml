      <class name="com.rt.tests.Flipkart"/>
    </classes>
  </test> <!-- Test-Firefox -->

  <test thread-count="3" name="Test-Edge">
    <parameter name="browser" value="edge"/>
    <classes>
      <class name="com.rt.tests.Flipkart"/>
    </classes>
  </test> <!-- Test-Edge -->

</suite> <!-- Suite -->
